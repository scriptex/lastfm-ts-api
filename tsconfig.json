{
	"compilerOptions": {
		"alwaysStrict": true,
		"baseUrl": "./",
		"checkJs": false,
		"declaration": true,
		"lib": ["ESNext"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noEmit": false,
		"noEmitHelpers": false,
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noStrictGenericChecks": false,
		"outDir": "./dist",
		"pretty": true,
		"removeComments": false,
		"sourceMap": true,
		"strict": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"strictNullChecks": true,
		"target": "ESNext"
	},
	"include": ["src/*.ts"],
	"exclude": ["node_modules"]
}
